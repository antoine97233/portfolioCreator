{% extends 'admin/admin.html.twig' %}

{% block title %}PortFolioCreator - Experiences
{% endblock %}

{% block body %}

	{% include 'partials/flash.html.twig' %}

	<div class="m-5 text-center col-12 col-sm-8 col-md-4 col-lg-4 col-xl-2 mx-auto">
		<a href="{{ path('admin.experience.add') }}" class="btn btn-outline-success btn-block text-primary">Add new Experience</a>
	</div>

	{% if experiences is not empty %}
		<div class="table-responsive">
			<table class="table table-light">
				<thead>
					<tr>
						<th scope="col">Title</th>
						<th scope="col">Type</th>
						<th scope="col">Location</th>
						<th scope="col">Start Date</th>
						<th scope="col">End Date</th>
						<th scope="col">Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for experience in experiences %}
						<tr class="table">
							<td>{{ experience.title }}</td>
							<td>
								{% if experience.isFormation %}
									Academic
								{% else %}
									Professional
								{% endif %}
							</td>
							<td>{{ experience.location }}</td>
							<td>{{ experience.startDate|date("d/m/Y") }}</td>
							<td>{{ experience.endDate ? experience.endDate|date("d/m/Y") : 'Present' }}</td>
							<td
								class="text-center d-flex gap-1">
								{# <a href="{{ path('task_add', {id: experience.id, source:'experience'}) }}" class="btn btn-primary btn-block" style="width:100px">Add Task</a> #}
								<a href="{{ path('admin.experience.edit', {id: experience.id}) }}" class="btn btn-outline-warning btn-block text-primary" style="width:100px">Edit</a>
								<form action="{{ path('admin.experience.delete', {id: experience.id}) }}" method="post" style="display: inline;">
									<input type="hidden" name="_method" value="DELETE">
									<button type="submit" class="btn btn-outline-danger text-primary" style="width:100px; height: 38px;">Delete</button>
								</form>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	{% else %}
		<p class="text-center">No experiences added</p>
	{% endif %}

{% endblock %}
