{% extends 'base.html.twig' %}

{% block title %}PortFolioCreator - Experiences
{% endblock %}

{% block body %}

	{% include 'partials/flash.html.twig' %}

	<div class="m-5 text-center col-12 col-sm-8 col-md-4 col-lg-4 col-xl-2 mx-auto">
		<a href="{{ path('admin.experience.add') }}" class="btn btn-outline-success btn-block text-primary shadow-sm">Add new Experience</a>
	</div>

	{% if experiences is not empty %}
		{% for experience in experiences %}
			<div class="table-responsive border mb-5 rounded shadow-sm">
				<table class="table table-light table-borderless">
					<thead>
						<tr>
							<th scope="col"></th>
							<th scope="col">Title</th>
							<th scope="col">Type</th>
							<th scope="col">Location</th>
							<th scope="col">Start Date</th>
							<th scope="col">End Date</th>
							<th scope="col">Actions</th>
						</tr>
					</thead>
					<tbody>
						<tr class="table">
							<td scope="col"></td>

							<td>{{ experience.title }}</td>
							<td>
								{% if experience.isFormation %}
									Academic
								{% else %}
									Professional
								{% endif %}
							</td>
							<td>{{ experience.location }}</td>
							<td>{{ experience.startDate|date("d/m/Y") }}</td>
							<td>{{ experience.endDate ? experience.endDate|date("d/m/Y") : 'Present' }}</td>
							<td class="text-center d-flex gap-1">
								<a href="{{ path('admin.task.add', {id: experience.id, source:'experience'}) }}" class="btn btn-outline-primary btn-sm d-flex align-items-center justify-content-center shadow-sm" style="width:100px; height: 38px;">Add Task</a>
								<a href="{{ path('admin.experience.edit', {id: experience.id}) }}" class="btn btn-outline-warning btn-sm text-primary d-flex align-items-center justify-content-center shadow-sm" style="width:100px; height: 38px;">Edit</a>
								<form action="{{ path('admin.experience.delete', {id: experience.id}) }}" method="post">
									<input type="hidden" name="_method" value="DELETE">
									<button type="submit" class="btn btn-outline-danger btn-sm text-primary d-flex align-items-center justify-content-center shadow-sm" style="width:100px; height: 38px;">Delete</button>
								</form>
							</td>
						</tr>

						{% if experience.task is not empty %}
							{% for task in experience.task %}
								<tr class="table">
									<td>
										<strong>Task
											{{ loop.index }}</strong>
									</td>
									<td colspan="5">
										<p>{{ task.description }}</p>
									</td>

									<td colspan="2" class="text-center">

										<form action="{{ path('admin.task.delete', {id: task.id, source:'experience'}) }}" method="post">
											<input type="hidden" name="_method" value="DELETE">
											<button type="submit" class="btn btn-outline-danger btn-sm text-primary d-flex align-items-center justify-content-center shadow-sm" style="width:100px; height: 38px;">Delete</button>
										</form>

									</td>
								</tr>
							{% endfor %}
						{% else %}
							<tr class="table-light">
								<td></td>
								<td colspan="6" class="text-left">
									No tasks for this experience
								</td>
							</tr>
						{% endif %}
					</tbody>
				</table>
			</div>
		{% endfor %}
	{% else %}
		<p class="text-center">No experience added</p>
	{% endif %}
{% endblock %}
